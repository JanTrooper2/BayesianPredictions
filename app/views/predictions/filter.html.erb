<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <h1>Predictions</h1>

  <table class="table table-hover" >
    <thead class="thead-dark">
      <tr>
        <th scope="col" colspan="1">Name</th>
        <th scope="col" colspan="1">Probability</th>
        <th scope="col" colspan="1">Expiration Date</th>
        <th scope="col" colspan="1">Outcome</th>
      </tr>
    </thead>

    <tbody>
      <% @predictions.each do |prediction| %>
        <tr>
          <td><%= prediction.name %></td>
          <td><%= prediction.probability_in_percent %>%</td>
          <td><%= prediction.expiration_date %></td>
          <td><%= prediction.outcome %></td>
          <td class="btn btn-info"><%= link_to 'Show', prediction %></td>
          <td class="btn btn-warning"><%= link_to 'Edit', edit_prediction_path(prediction) %></td>
          <td class="btn btn-danger"><%= link_to 'Destroy', prediction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <p><%= link_to 'Back', predictions_path %></p>
  <p><%= link_to 'Evaluate Performance', "https://www.wikipedia.org/" %></p>
  <p><%= link_to 'New Prediction', new_prediction_path %></p>
<% else %>
  <h1>Welcome to Bayesian Predictions!</h1>
  <p>Please Login here: <%= link_to "Login", new_user_session_path %> </p>
  <p>Or Sign Up here: <%= link_to "Sign Up", new_user_registration_path %> </p>

<% end %>