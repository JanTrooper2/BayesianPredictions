<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <h1>Predictions</h1>
  <%= render "table"%>
  <br>
  <p><%= link_to 'Expired Predictions', predictions_filtered_path %></p>
  <p><%= link_to 'New Prediction', new_prediction_path %></p>
  <p><%= link_to 'Calibration', requests_path %></p>
<% else %>
  <h1>Welcome to Bayesian Predictions!</h1>
  <p>Please Login here: <%= link_to "Login", new_user_session_path, class: "text-white btn btn-info" %> </p>
  <p>Or Sign Up here: <%= link_to "Sign Up", new_user_registration_path, class: "text-white btn btn-success" %> </p>

<% end %>